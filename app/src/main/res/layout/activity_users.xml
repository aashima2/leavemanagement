<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="761dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="184dp"
                android:layout_height="61dp"
                android:text="UserID"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="184dp"
                android:layout_height="61dp"
                android:text="UserName"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="184dp"
                android:layout_height="61dp"
                android:text="UserPassword"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="184dp"
                android:layout_height="61dp"
                android:text="Empname"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="184dp"
                android:layout_height="61dp"
                android:text="Empdepartment"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />
            <!--<TextView-->
                <!--android:layout_width="184dp"-->
                <!--android:layout_height="61dp"-->
                <!--android:text="Status"-->
                <!--android:textAlignment="center"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="20sp" />-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/uid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <EditText
                android:id="@+id/u_name1"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="Enter User name"
                android:inputType="textPersonName"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/u_password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/Ename"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Enter  name"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/EDepartment"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="textPersonName" />
            <!--<EditText-->
                <!--android:id="@+id/EStatus"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="55dp"-->
                <!--android:inputType="textPersonName" />-->
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/u_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.806" />


</android.support.constraint.ConstraintLayout>