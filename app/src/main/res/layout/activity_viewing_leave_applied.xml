<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewingLeaveApplied">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="92dp"
        android:layout_height="29dp"
        android:text="StartDate"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_marginEnd="36dp"
        android:text="EndDate"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
        app:layout_constraintEnd_toStartOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:text="To"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
        app:layout_constraintEnd_toStartOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Reason"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vtstartdate"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:layout_marginEnd="56dp"
        android:inputType="date"
        android:text="NO DATA"
        app:layout_constraintBaseline_toBaselineOf="@+id/vtenddate"
        app:layout_constraintEnd_toStartOf="@+id/vtenddate" />

    <TextView
        android:id="@+id/vtenddate"
        android:layout_width="87dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:inputType="date"
        android:text="NO DATA"
        app:layout_constraintEnd_toStartOf="@+id/vtTo"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/vtTo"
        android:layout_width="71dp"
        android:layout_height="28dp"
        android:layout_marginEnd="12dp"
        android:inputType="text"
        android:text="NO DATA"
        app:layout_constraintEnd_toStartOf="@+id/vtReason"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/vtReason"
        android:layout_width="89dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:text="NO DATA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/Approve"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="80dp"
        android:text="Approve"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/NotApprove"
        app:layout_constraintEnd_toStartOf="@+id/NotApprove" />

    <Button
        android:id="@+id/NotApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="16dp"
        android:text="Not Approve"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>